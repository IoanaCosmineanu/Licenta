<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetrieveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:textAlignment="center"
            android:text="Alegeti o categorie"
            android:id="@+id/textViewCategorie"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:text="Desert"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="16dp"
            android:text="fel principal"
           />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Supe"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingrediente"
        android:id="@+id/textViewIngrediente"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_margin="15dp"
        android:id="@+id/buttonRetrieve"
        android:text="Genereaza"
        android:onClick="retrievedata"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>